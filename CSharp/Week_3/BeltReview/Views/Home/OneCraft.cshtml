@model Craft
<div class="d-flex justify-content-around">
    <div class="border shadow rounded p-2">
        <h3>@Model.Title</h3>
        <img src="@Model.Image" alt="@Model.Title" class="oneImg">
        <h4>By: @Model.Creator.Username</h4>
        <h4>@Model.Price.ToString("C")</h4>
        <h4>@Model.Quantity in stock</h4>
        <h5>@Model.Description</h5>
    </div>
    <div>
        <h3>Order now</h3>
        @{
            Order newOrder = new Order()
            {
                CraftId = Model.CraftId
            };
        }
        @await Html.PartialAsync("_OrderCraft", newOrder)
    </div>
</div>