@{
    ViewData["Title"] = "Privacy Policy";
}
<div class="welcome d-flex justify-content-between mt-4">
    <h1>Welcome @Context.Session.GetString("UserName")</h1>
    <form action="logout" method="post"><button class="btn btn-danger">Logout</button></form>
</div>
<div class="container text-center">
<h1>@Context.Session.GetInt32("Num")</h1>
<div class=" d-flex justify-content-center mt-4 gap-3">
    <form asp-action="Operations" method="post">
        <input type="hidden" name="buttonName" value="add">
        <button type="submit" class="btn btn-primary btn-lg">+1</button>
    </form>
    <form asp-action="Operations" method="post">
        <input type="hidden" name="buttonName" value="subtract">
        <button type="submit" class="btn btn-info btn-lg">-1</button>
    </form>
    <form asp-action="Operations" method="post">
        <input type="hidden" name="buttonName" value="multiply">
        <button type="submit" class="btn btn-warning btn-lg">*2</button>
    </form>
    <form asp-action="Operations" method="post">
        <input type="hidden" name="buttonName" value="random">
        <button type="submit" class="btn btn-danger btn-lg">+ random</button>
    </form>
</div>
</div>
