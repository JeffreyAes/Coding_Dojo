from flask_app import app
from flask import render_template, redirect, request, session
from flask_app.models.default_models import Default


@app.route('/')
def index():
    return redirect('/home')


@app.route('/home')
def users():
    return render_template("home.html", users=Default.get_all())


@app.route("/home/new")
def create_user():
    return render_template("new.html")


@app.route("/home/<int:id>/show")
def show_user(id):
    one_user = Default.get_one({"id": id})
    return render_template("user_show_one.html", one_user=one_user)


@app.route("/add_user", methods=["POST"])
def addUser():
    Default.save(request.form)
    return redirect('/home')


@app.route("/home/<int:id>/delete")
def delete_user(id):
    data = {
        'id': id
    }
    Default.delete(data)
    return redirect('/')


@app.route("/home/<int:id>/edit")
def edit_user(id):
    data = {
        'id': id
    }

    this_user = Default.get_one(data)
    return render_template("edit_user.html", this_user=this_user)


@app.route("/home/<int:id>/update", methods=["POST"])
def update_user(id):
    data = {
        **request.form,
        'id': id
    }
    Default.update(data)
    return redirect('/')
